        <section class="partners mt-2 mb-5">
            <h2 class="text-center my-5">Nos Partenaires</h2>

            <div id="carouselExampleIndicators" class="container carousel slide">

                <div class="carousel-inner d-flex">

                    <div class="carousel-item active">
                        <div class="d-flex">
                            <div>
                                <img src="{{ asset('images/front/sheba.svg') }}" alt="">
                            </div>

                            <div>
                                <img src="{{ asset('images/front/jk9.svg') }}" alt="">
                            </div>

                            <div>
                                <img src="{{ asset('images/front/pedigree.svg') }}" alt="">
                            </div>

                            <div>
                                <img src="{{ asset('images/front/purina-one.svg') }}" alt="">
                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <div class="d-flex">
                            <div>
                                <img src="{{ asset('images/front/whiskas.png') }}" alt="">
                            </div>

                            <div>
                                <img src="{{ asset('images/front/royal-canin.svg') }}" alt="">
                            </div>

                            <div>
                                <img src="{{ asset('images/front/friskies.svg') }}" alt="">
