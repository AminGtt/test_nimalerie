                            <div>
                                <img src="{{ asset('images/front/proplan.svg') }}" alt="">
                            </div>
                        </div>
                    </div>

                </div>


                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="iconify" data-inline="false" data-icon="mdi:chevron-double-left" style="color: #07775A; height: 50px; width: 50px;"></span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="iconify" data-inline="false" data-icon="mdi:chevron-double-right" style="color: #07775A; height: 50px; width: 50px;"></span>

                </a>

            </div>

        </section>

        <section class="homeMenu">
            <h2 class="text-center">Toute l'animalerie</h2>

            <div class="wrapper container d-flex my-5">
                <div>
                    <img src="{{ asset('images/front/chien2.jpg') }}" alt="">
                </div>

                <div class="d-flex list">
                    <ul class="flex-column align-items-baseline">
                        <li>
                            <h2><a href="{{ path('product_list') }}">Toute la boutique</a></h2>
                        </li>
                        {% for categorie in categories %}
                            {% if categorie.parent == 'Animaux' %}
                                <li><h2><a href="{{ path('product_listByCategorie', {'slug' : categorie.slug}) }}">{{ categorie.name }}</a></h2></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </section>

        <div class="services">
            {{ include('ourServices/ourServices.html.twig') }}
        </div>

        <div class="maps">
            {{ include('maps/maps.html.twig') }}
        </div>
    </main>

{% endblock %}
