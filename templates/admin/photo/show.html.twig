{% extends 'admin/base.html.twig' %}

{% block title %}Détails photo{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center">
    <h2>Administration / Photo</h2>

    <div>
        <button class="button blue_btn new">
            <a href="{{ path('photo_new') }}">Nouvelle photo</a>
        </button>
    </div>
</div>

<div class="table-wrapper">
    <table class="table table-borderless" id="photo">
        <thead>
        <tr>
            <th>Id</th>
            <th>Produit</th>
            <th>Lien</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>{{ photo.id }}</td>
            <td>{{ photo.product }}</td>
            <td>{{ photo.link }}</td>
            <td>
                <button class="edit_btn button">
                    <a href="{{ path('photo_edit', {'id': photo.id}) }}">Editer</a>
                </button>
{#                <button id="invisible">#}
{#                    {{ include('admin/photo/_delete_form.html.twig') }}#}
{#                </button>#}

                <!-- Modal -->
                {{ include('modal/trigger.html.twig') }}
            </td>
        </tr>

        <tr>
            <td>
                <button class="button blue_btn">
                    <a href="{{ path('photo_index') }}">Retour à la liste</a>
                </button>
            </td>
        </tr>
        <!-- Modal -->
        {% include 'modal/modal.html.twig' with {'element': 'photo'} %}
        </tbody>
    </table>
</div>
{% endblock %}
