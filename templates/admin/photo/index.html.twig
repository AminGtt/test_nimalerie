{% extends 'admin/base.html.twig' %}

{% block title %}Liste des photos{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h2>Administration / Photo</h2>

        <div>
            <a href="{{ path('photo_new') }}">
                <button class="button blue_btn new">
                    Nouvelle photo
                </button>
            </a>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table table-borderless" id="photo">
            <thead>
            <tr>
                <th>Id</th>
                <th>Produit</th>
                <th>Lien</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for photo in photos %}
                <tr>
                    <td>{{ photo.id }}</td>
                    <td>{{ photo.product }}</td>
                    <td>{{ photo.link }}</td>
                    <td>
                        <button class="blue_btn button">
                            <a href="{{ path('photo_show', {'id': photo.id}) }}">Détails</a>
                        </button>
                        <button class="edit_btn button">
                            <a href="{{ path('photo_edit', {'id': photo.id}) }}">Editer</a>
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune photo trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
