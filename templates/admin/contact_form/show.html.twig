{% extends 'admin/base.html.twig' %}

{% block title %} Détails contact{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center">
        <h2>Administration / Contacts</h2>
    </div>

    <div class="table-wrapper">
        <table class="table table-borderless" id="categorie">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Mail</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ contact_form.id }}</td>

                <td>{{ contact_form.name }}</td>

                <td>
                    {{ contact_form.phone }}
                </td>

                <td>
                    {{ contact_form.mail }}
                </td>

                <td>{{ contact_form.message }}</td>

                <td>
                    <!-- Modal -->
                    {{ include('modal/trigger.html.twig') }}
                </td>

            </tr>

            <tr>
                <td>
                    <button class="button blue_btn">
                        <a href="{{ path('admin_contact_form_list') }}">Retour à la liste</a>
                    </button>
                </td>
            </tr>

            <!-- Modal -->
            {% include 'modal/modal.html.twig' with {'element': 'contact_form'} %}

            </tbody>
        </table>
    </div>

{% endblock %}
