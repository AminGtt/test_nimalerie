{% extends 'admin/base.html.twig' %}

{% block title %}Détails état{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h2>Administration / Client</h2>

        <div>
            <button class="button blue_btn new">
                <a href="{{ path('state_new') }}">Nouveau client</a>
            </button>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table table-borderless" id="state">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ state.id }}</td>
                <td>{{ state.name }}</td>
                <td>
                    <button class="edit_btn button">
                        <a href="{{ path('state_edit', {'id': state.id}) }}">Editer</a>
                    </button>
                    <button id="invisible">
                        {{ include('admin/state/_delete_form.html.twig') }}
                    </button>
                </td>
            </tr>

            <tr>
                <td>
                    <button class="button blue_btn">
                        <a href="{{ path('state_index') }}">Retour à la liste</a>
                    </button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
