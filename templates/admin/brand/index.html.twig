{% extends 'admin/base.html.twig' %}

{% block title %}Liste des marques{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h2>Administration / Marques</h2>

        <div>
            <a href="{{ path('brand_new') }}">
                <button class="button blue_btn new">
                    Nouvelle marque
                </button>
            </a>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table table-borderless" id="brand">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for brand in brands %}
                <tr>
                    <td>{{ brand.id }}</td>
                    <td>{{ brand.name }}</td>
                    <td>
                        <button class="blue_btn button">
                            <a href="{{ path('brand_show', {'id': brand.id}) }}">Détails</a>
                        </button>
                        <button class="edit_btn button">
                            <a href="{{ path('brand_edit', {'id': brand.id}) }}">Editer</a>
                        </button>
                        <button id="invisible">
                            {{ include('admin/brand/_delete_form.html.twig') }}
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune marque trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
