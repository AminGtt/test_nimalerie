{% extends 'admin/base.html.twig' %}

{% block title %}Détail Produit/commande{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h2>Administration / Produit par commande</h2>

        <div>
            <button class="button blue_btn new">
                <a href="{{ path('product_order_new') }}">Nouveau Produit/commande</a>
            </button>
        </div>
    </div>


    <div class="table-wrapper">
        <table class="table table-borderless" id="productOrder">
            <thead>
            <tr>
                <th>Nom du produit</th>
                <th>Commande N°</th>
                <th>Quantité</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ product_order.product }}</td>
                    <td>{{ product_order.order }}</td>
                    <td>{{ product_order.quantity }}</td>
                    <td>
                        <button class="edit_btn button">
                            <a href="{{ path('product_order_edit', {'id': product_order.id}) }}">Editer</a>
                        </button>
{#                        <button id="invisible">#}
{#                            {{ include('admin/product_order/_delete_form.html.twig') }}#}
{#                        </button>#}

                        <!-- Modal -->
                        {{ include('modal/trigger.html.twig') }}
                    </td>
                </tr>

                <tr>
                    <td>
                        <button class="button blue_btn">
                            <a href="{{ path('product_order_index') }}">Retour à la liste</a>
                        </button>
                    </td>
                </tr>
                <!-- Modal -->
                {% include 'modal/modal.html.twig' with {'element': 'product_order'} %}
            </tbody>
        </table>
    </div>
{% endblock %}
