{% extends 'admin/base.html.twig' %}

{% block title %}Détails produit{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h2>Administration / Produit</h2>

        <div>
            <button class="button blue_btn new">
                <a href="{{ path('product_new') }}">Nouveau produit</a>
            </button>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table table-borderless" id="product">
            <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Marque</th>
                <th>Catégorie</th>
                <th>Description</th>
                <th>Prix HT</th>
                <th>Prix TTC</th>
                <th>Est Actif?</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.title }}</td>
                    <td>{{ product.brand }}</td>
                    <td>{{ product.categorie }}</td>
{#                    <td>{{ categorie }}</td>#}
                    <td>{{ product.description }}</td>
                    <td>{{ product.excltaxPrice }}</td>
                    <td>{{ product.incltaxPrice }}</td>
                    <td>{{ product.isActive ? 'Oui' : 'Non' }}</td>
                    <td>
                        <button class="edit_btn button">
                            <a href="{{ path('product_edit', {'id': product.id}) }}">Editer</a>
                        </button>
{#                        <button id="invisible">#}
{#                            {{ include('admin/product/_delete_form.html.twig') }}#}
{#                        </button>#}

                        <!-- Modal -->
                        {{ include('modal/trigger.html.twig') }}
                    </td>
                </tr>

                <tr>
                    <td>
                        <button class="button blue_btn">
                            <a href="{{ path('product_index') }}">Retour à la liste</a>
                        </button>
                    </td>
                </tr>
                <!-- Modal -->
                {% include 'modal/modal.html.twig' with {'element': 'product'} %}
            </tbody>
        </table>
    </div>
{% endblock %}
