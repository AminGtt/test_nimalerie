{% extends 'admin/base.html.twig' %}

{% block title %}Details categorie{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h2>Administration / Catégories</h2>

        <div>
            <button class="button blue_btn new">
                <a href="{{ path('categorie_new') }}">Nouvelle Catégorie</a>
            </button>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table table-borderless" id="categorie">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>EstEnfante</th>
                <th>Nom parent</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.name }}</td>
                <td>
                        {{ categorie.parent is null ? 'Non' : 'Oui' }}
                </td>
                <td>
                    {{ categorie.parent.name is null ? 'Pas de catégorie' : categorie.parent.name }}
                </td>
                <td>
                    <button class="edit_btn button">
                        <a href="{{ path('categorie_edit', {'id': categorie.id}) }}">Editer</a>
                    </button>
{#                    <button id="invisible">#}
{#                        {{ include('admin/categorie/_delete_form.html.twig') }}#}
{#                    </button>#}

                    <!-- Modal -->
                    {{ include('modal/trigger.html.twig') }}
                </td>

            </tr>

            <tr>
                <td>
                    <button class="button blue_btn">
                        <a href="{{ path('categorie_index') }}">Retour à la liste</a>
                    </button>
                </td>
            </tr>

            <!-- Modal -->
            {% include 'modal/modal.html.twig' with {'element': 'categorie'} %}

            </tbody>
        </table>
    </div>
{% endblock %}
